{% extends "base.html.twig" %}

{% block title %}{{ activity.title }}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

<br />
                <div class="col-10 mx-auto">
                    <div class="card">
                      <div class="card-header">
                          <h1>{{ activity.title }}</h1>
                      </div>
                      <div class="d-flex">
                        <div class="col-5 ml-4 mt-4">
                          {#                Pour afficher des images#}
                          {% if activity.img != null %}
                              <img src="{{ activity.img }}" class="card-img-top" alt="{{ activity.title }}">
                          {% else %}
                              {% for catimg in activity.getImages() %}
                                  {% if loop.first %}
                                      <img src="/templates/holidaysnew/images/default-img/{{ catimg.img }}.jpg" class="card-img-top" alt="{{ activity.title }}">         
                                  {% endif %}
                              {% endfor %}
                          {% endif %}
                        </div>

                      </div>
                      <div class="card-body">
                        <blockquote class="blockquote mb-0">
                          <p class="col-10 text-justify">{{ activity.description }} </p>
                          <footer class="blockquote-footer ml-3">Adresse </footer>
                          <div class="ml-3">
                              {{ activity.address }} <br /> {{ activity.ville }} <br /> {{ activity.postcode }}
                              {{ app.session.set('ville', activity.ville) }}
                          </div>
                        </blockquote>
                      </div>
                    </div>
                </div>

      
{% endblock %}