{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}

    <div class=" mt-5 mx-auto w-75">
        <h1 class="ml-n2">Details</h1>
    </div>
                <div class="col-10 mx-auto">
                    <div class="card">
                      <div class="card-header">
                        {{ activity.title }}
                      </div>
                      <div class="d-flex">
                        <div class="col-5 ml-4 mt-4">
                          {#                Pour afficher des images#}
                          {% if activity.img != null %}
                              <img src="{{ activity.img }}" class="card-img-top" alt="{{ activity.title }}">
                          {% else %}
                              {% for catimg in activity.getImages() %}
                                  {% if loop.first %}
                                      <img src="/templates/holidaysnew/images/default-img/{{ catimg.img }}.jpg" class="card-img-top" alt="{{ activity.title }}">         
                                  {% endif %}
                              {% endfor %}
                          {% endif %}
                        </div>

                      </div>
                      <div class="card-body">
                        <blockquote class="blockquote mb-0">
                          <p class="col-10 text-justify">{{ activity.description }} </p>
                          <footer class="blockquote-footer ml-3">{{ activity.address }} <cite title="Source Title">{{ activity.ville }}</cite></footer>
                          {{ app.session.set('ville', activity.ville) }}

                        </blockquote>
                      </div>
                    </div>
                </div>

      
{% endblock %}